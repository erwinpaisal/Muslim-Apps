<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/jadwalsholat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.jadwalsholat.JadwalSholat">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Sholat"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subuh"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtSubuh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subuh"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Syuruq"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtTerbit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Syuruq"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dhuha"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtDhuha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dhuha"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dzuhur"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtDzuhur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dzuhur"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ashar"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtAshar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ashar"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtMaghrib"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Isya"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtIsya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Isya"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-light"/>
                        <TextView
                            android:id="@+id/txtMaghrib"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="monospace"/>-->
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/txtLokasi"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/txtLokasiLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Lengkap"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>